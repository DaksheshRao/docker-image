pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        script {
         def dockerImage = docker.build("fibonnaci:1.1", "-f Dockerfile .")
	 dockerImage.tag("daksheshrao/fibonacci:1.1")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh') 
	  docker.tag('fibonacci:1.1', 'daksheshrao/fibonacci:1.1')
	  def dockerImage = docker.image("daksheshrao/fibonacci:1.1")
          dockerImage.push()
        }
      }
    }
  }
}

