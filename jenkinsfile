pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        script {
          // Define the variable outside the script block
          def builtImage
          builtImage = docker.build("fibonnaci:3.0", "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://index.docker.io/v1/', 'docker-dakshesh') {
            builtImage.push()
          }
        }
      }
    }
  }
}
