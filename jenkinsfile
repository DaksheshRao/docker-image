pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        script {
         def dockerImage = docker.build("daksheshrao/fibonnaci:1.1", "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh') 
	  {
           docker.image('fibonacci:1.1').push("daksheshrao/fibonacci:1.1")
	  }
        }
      }
    }
  }
}
