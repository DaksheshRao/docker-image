pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        script {
          def dockerImage = docker.build('${params.dockerhub-tag}:${params.tag}', "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh') {
            docker.image('${params.dockerhub-tag}:${params.tag}').push()
          }
        }
      }
    }
    stage('Build and push image on harbor') {
      steps {
        script{
          def dockerImage = docker.build("${params.harbor-tag}:${params.tag}", "-f Dockerfile .")
          docker.withRegistry('https://harbor.cubastion.net', 'harbor_sre'){
          dockerImage.push()
         } 
	}
       }
      }
    stage('Cleanup') {
      steps {
        cleanWs()
      }
    }
  }
}
