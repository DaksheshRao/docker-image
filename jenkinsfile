pipeline {
  agent any
  
    parameters {
        string(name: 'imageName', defaultValue: 'daksheshrao/fibonacci', description: 'The name of the Docker image')
        string(name: 'imageTag', defaultValue: '4.0', description: 'The tag for the Docker image')
    }
  stages {
    stage('Build Docker image') {
      steps {
        script {
          def dockerImage = docker.build('daksheshrao/fibonacci:3.0', "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh')
	  {
            docker.image('daksheshrao/fibonacci:3.0').push()
          }
        }
      }
    }
    stage('Build and push image on harbor') {
      steps {
        script{
          def dockerImage = docker.build("sre-training/daksheshrao-fibonacci:4.0", "-f Dockerfile .")
          docker.withRegistry('https://harbor.cubastion.net', 'harbor_sre'){
          dockerImage.push()
         } 
	}
       }
      }
    stage('Cleanup') {
      steps {
        cleanWs()
      }
    }
  }
}
