pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        // Define the variable outside the script block
        def builtImage

        script {
          builtImage = docker.build("fibonnaci:1.1", "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh') {
            builtImage.push()
          }
        }
      }
    }
  }
}

