pipeline {
  agent any
  stages {
    stage('Build Docker image') {
      steps {
        script {
          def imageName = ${params.dockerhub_tag}
          def imagetag = ${params.tag}
          def dockerImage = docker.build(imageName:imagetag, "-f Dockerfile .")
        }
      }
    }
    stage('Push to Docker Hub') {
      steps {
        script {
          docker.withRegistry('https://registry.hub.docker.com', 'docker-dakshesh')
	  def imageName = "${params.dockerhub_tag}:${params.tag}"
	  {
            docker.image(imageName).push()
          }
        }
      }
    }
    stage('Build and push image on harbor') {
      steps {
        script{
          def dockerImage = docker.build("${params.harbor-tag}:${params.tag}", "-f Dockerfile .")
          docker.withRegistry('https://harbor.cubastion.net', 'harbor_sre'){
          dockerImage.push()
         } 
	}
       }
      }
    stage('Cleanup') {
      steps {
        cleanWs()
      }
    }
  }
}
